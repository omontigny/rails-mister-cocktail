<!-- app/views/cocktails/new.html.erb -->
<div class="container">
  <div class="row">
      <h2>Create a New Cocktail </h2>
<br>
      <%= simple_form_for [ @cocktail ] do |f| %>
        <%= f.input :name %>
        <%= f.submit "Create cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= link_to "Back", cocktails_path, {class: "btn btn-primary"} %>
</div>
