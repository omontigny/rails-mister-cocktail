
<div class="container">
      <div class="menu"><%= link_to "Add a new cocktail", new_cocktail_path, {class: "btn btn-primary"} %>
      </div>
      <div class="cards">
        <% @cocktails.each do | cocktail | %>
        <% url = asset_url("missingimage") unless url = image_path(cocktail.name) %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= url %>');">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      </div>
  </div>



