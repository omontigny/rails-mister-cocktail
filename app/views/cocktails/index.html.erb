
<div class="container">
      <div class="menu"><%= link_to "Add Cocktail", new_cocktail_path, {class: "btn btn-flat"} %>
      </div>
      <div class="cards">
        <% @cocktails.each do | cocktail | %>
         <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://img.freepik.com/photos-gratuite/selection-divers-cocktails-table_140725-2909.jpg?size=626&ext=jpg');">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      </div>
  </div>


